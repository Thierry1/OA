<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@mipmap/navigation_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_64"/>

            <ImageView
                android:id="@+id/iv_my_return"
                android:layout_width="@dimen/dp_9"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_14"
                android:background="@mipmap/qr_return" />
            <TextView
                android:textSize="@dimen/sp_16"
                android:text="我的"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/my_iv_setting"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/my_setting"
                android:layout_width="@dimen/dp_16_5"
                android:layout_height="@dimen/dp_16_5"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_rela_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49">
            <ImageView
                android:id="@+id/iv_qr_code"
                android:background="@mipmap/my_qr_code"
                android:layout_width="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_27_5"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/dp_14_5"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:text="二维码"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_qr_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:background="@mipmap/my_enter"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_15"/>
        </RelativeLayout>
        <View
            android:background="@color/grey_second"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>
        <RelativeLayout
            android:id="@+id/my_rela_data"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49">
            <ImageView
                android:id="@+id/iv_data"
                android:background="@mipmap/my_data"
                android:layout_width="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_27_5"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/dp_14_5"/>
            <TextView
                android:textSize="@dimen/sp_14"
                android:text="我的数据"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:background="@mipmap/my_enter"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_15"/>
        </RelativeLayout>
        <View
            android:background="@color/grey_second"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>
    </LinearLayout>



