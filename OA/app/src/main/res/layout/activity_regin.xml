    <ImageView
        android:id="@+id/iv_register_return"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_12_5"
        android:layout_marginTop="@dimen/dp_32"
        android:src="@mipmap/register_return" />

    <TextView
        android:layout_width="@dimen/dp_55"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_27_5"
        android:layout_marginTop="@dimen/dp_29"
        android:text="注册"
        android:textColor="#ff333333"
        android:textSize="21sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="@dimen/dp_375"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/dp_42"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_27_5"
            android:layout_marginTop="@dimen/dp_21_5"
            android:text="手机号"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_21_5"
            android:src="@mipmap/asterisk" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_322"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_26_5"
        android:layout_marginTop="@dimen/dp_10_5"
        android:layout_marginRight="@dimen/dp_26_5"
