<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <!--二维码-->
    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64">
        <ImageView
            android:id="@+id/iv_qr_code_return"
            android:background="@mipmap/video_return"
            android:layout_width="@dimen/dp_9"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_height="@dimen/dp_15"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的二维码"
            android:textColor="#ff333333"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_16"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/re1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_114"
        android:layout_height="@dimen/dp_439">
        <ImageView
            android:background="@mipmap/my_qr_background"
            android:layout_width="@dimen/dp_340"
            android:layout_height="@dimen/dp_439"/>
        <ImageView
            android:id="@+id/my_qr_head"
            android:layout_marginTop="@dimen/dp_21"
             android:layout_marginLeft="@dimen/dp_21"
            android:background="@mipmap/ic_launcher"
            android:layout_width="@dimen/dp_56_5"
            android:layout_height="@dimen/dp_56_5"/>
        <TextView
            android:id="@+id/tv_qr_user"
            android:layout_toRightOf="@id/my_qr_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_40"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp_20"
            />
        <ImageView
            android:id="@+id/iv_qr"
            android:background="@mipmap/ic_launcher"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/dp_262"
            android:layout_height="@dimen/dp_262"/>
    </RelativeLayout>

</RelativeLayout>