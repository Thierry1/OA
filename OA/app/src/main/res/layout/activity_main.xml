<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.ui.activity.HomepageActivity">

    <RelativeLayout
        android:layout_width="@dimen/dp_375"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_oa"
            android:layout_width="@dimen/dp_62"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_161_5"
            android:layout_marginTop="@dimen/dp_33_5"
            android:text="OA系统"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="@dimen/dp_15_5"
            android:layout_height="@dimen/dp_15_5"
            android:layout_marginLeft="@dimen/dp_108"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_toRightOf="@id/tv_oa"
            android:background="@mipmap/scan" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13">

        <ImageView
            android:layout_width="@dimen/dp_375"
            android:layout_height="@dimen/dp_206_5"
            android:background="@mipmap/background_image" />

        <ImageView
            android:id="@+id/iv_ellipse_1"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_151"
            android:background="@drawable/homepager_head_shape"
            android:layout_marginTop="@dimen/dp_58"
            android:src="@mipmap/ellipse_1" />

        <TextView
            android:id="@+id/tv_login_regin"
            android:layout_width="@dimen/dp_73"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_ellipse_1"
            android:layout_marginTop="@dimen/dp_9_5"
            android:layout_centerHorizontal="true"
            android:text="登录/注册"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_375"
        android:layout_height="@dimen/dp_75"
        android:background="@drawable/home_page_selector">

        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_16_5"
            android:background="@mipmap/video" />

        <ImageView
            android:id="@+id/iv_join_us"
            android:layout_width="@dimen/dp_25_5"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_toRightOf="@id/iv_video"
            android:background="@mipmap/join_us" />

        <ImageView
            android:id="@+id/iv_generalize"
            android:layout_width="@dimen/dp_23_5"
            android:layout_height="@dimen/dp_23_5"
            android:layout_marginLeft="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_toRightOf="@id/iv_join_us"
            android:background="@mipmap/generalize" />

        <TextView
            android:id="@+id/tv_video"
            android:layout_width="@dimen/dp_28"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_video"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_8_5"
            android:layout_marginBottom="@dimen/dp_14_5"
            android:text="视频"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_join_us"
            android:layout_width="@dimen/dp_65_5"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_join_us"
            android:layout_marginLeft="@dimen/dp_75"
            android:layout_marginTop="@dimen/dp_9_5"
            android:layout_toRightOf="@id/tv_video"
            android:text="加入我们"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_generalize"
            android:layout_width="@dimen/dp_61"
            android:layout_height="@dimen/dp_14"
            android:layout_below="@id/iv_generalize"
            android:layout_marginLeft="@dimen/dp_66"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_toRightOf="@id/tv_join_us"
            android:text="推广APP"
            android:textColor="#ffffffff"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_375"
        android:layout_height="@dimen/dp_75"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/home_page_selector">

        <ImageView
            android:id="@+id/iv_my"
            android:layout_width="@dimen/dp_26_5"
            android:layout_height="@dimen/dp_24_5"
            android:layout_marginLeft="@dimen/dp_49_5"
            android:layout_marginTop="@dimen/dp_14_5"
            android:background="@mipmap/my" />

        <ImageView
            android:id="@+id/iv_list"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_19"
            android:layout_toRightOf="@id/iv_my"
            android:layout_marginLeft="@dimen/dp_98"
            android:layout_marginTop="@dimen/dp_18_5"
            android:background="@mipmap/list" />

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_toRightOf="@id/iv_list"
            android:layout_marginLeft="@dimen/dp_98_5"
            android:layout_marginTop="@dimen/dp_13"
            android:background="@mipmap/message" />

        <TextView
            android:id="@+id/tv_my"
            android:layout_width="@dimen/dp_30"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_my"
            android:layout_marginLeft="@dimen/dp_49"
            android:layout_marginTop="@dimen/dp_8"
            android:text="我的"
            android:textColor="#ffffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_list"
            android:layout_toRightOf="@id/tv_my"
            android:layout_marginLeft="@dimen/dp_83_5"
            android:layout_marginTop="@dimen/dp_11"
            android:text="好友列表"
            android:textColor="#ffffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="@dimen/dp_30"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_message"
            android:layout_toRightOf="@id/tv_list"
            android:layout_marginLeft="@dimen/dp_83"
            android:layout_marginTop="@dimen/dp_9"
            android:text="消息"
            android:textColor="#ffffffff"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>