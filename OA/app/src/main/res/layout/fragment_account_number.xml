<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
     >
    <TextView
        android:layout_width="@dimen/dp_42"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_27_5"
        android:layout_marginTop="@dimen/dp_30"
        android:text="手机号"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="@dimen/dp_322"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_26_5"
        android:layout_marginTop="@dimen/dp_10_5"
        android:background="@drawable/login_phone_selector">

        <EditText
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15_5"
            android:layout_marginTop="@dimen/dp_13_5"
            android:background="@null"
            android:hint="请输入手机号" />
    </LinearLayout>

    <TextView
        android:layout_width="@dimen/dp_30"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_27_5"
        android:layout_marginTop="@dimen/dp_21_5"
        android:text="密码"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_14" />
    <LinearLayout
        android:layout_marginTop="@dimen/dp_7"
        android:background="@mipmap/login_input_box"
        android:layout_marginLeft="@dimen/dp_22_5"
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_48_5">
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="3dp"
            android:background="@drawable/login_phone_selector"
            android:layout_width="@dimen/dp_322"
            android:layout_height="@dimen/dp_40">
            <EditText
                android:layout_width="@dimen/dp_110"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_13"
                android:background="@null"
                android:hint="请输入你的密码" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/agreement"
            android:background="@drawable/agreement_selector"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_11"
            android:layout_marginLeft="@dimen/dp_182"
            android:layout_marginTop="@dimen/dp_25" />
        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="@dimen/dp_154"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24_5"
            android:layout_marginLeft="@dimen/dp_5_5"
            android:text="需要勾选同意《OA系统协议》!"
            android:textColor="#ff5690f5"
            android:textSize="11sp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="@dimen/dp_322"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_26_5"
        android:layout_marginTop="@dimen/dp_50">

        <ImageView
            android:id="@+id/iv_regin_login"
            android:layout_width="@dimen/dp_322"
            android:layout_height="@dimen/dp_39_5"
            android:background="@mipmap/login_box" />

        <TextView
            android:layout_width="@dimen/dp_45"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/dp_56"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:layout_marginLeft="@dimen/dp_27_5"
            android:layout_marginTop="@dimen/dp_17"
            android:textColor="#ff579ced"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:layout_width="@dimen/dp_56"
            android:layout_height="wrap_content"
            android:text="立即注册"
            android:layout_marginLeft="@dimen/dp_208"
            android:layout_marginTop="@dimen/dp_17"
            android:textColor="#ff579ced"
            android:textSize="@dimen/sp_14"
            />
    </LinearLayout>



</LinearLayout>
