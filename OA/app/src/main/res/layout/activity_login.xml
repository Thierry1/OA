<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_login_return"
        android:layout_width="@dimen/dp_11"
        android:layout_height="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_17_5"
        android:layout_marginTop="@dimen/dp_31_5"
        android:src="@mipmap/login_return" />

    <TextView
        android:layout_width="@dimen/dp_45"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginTop="@dimen/dp_30_5"
        android:text="登录"
        android:textColor="#ff333333"
        android:textSize="21sp" />

    <RadioGroup
        android:id="@+id/rg_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_login_account_number"
            android:layout_width="@dimen/dp_96"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_17_5"
            android:button="@null"
            android:text="账号密码登录"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radio_login_note"
            android:layout_width="@dimen/dp_72"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_28_5"
            android:layout_marginTop="@dimen/dp_19_5"
            android:button="@null"
            android:text="短信快捷登录"
            android:textColor="@color/login_textcolor_selector"
            android:textSize="@dimen/dp_12" />

    </RadioGroup>

    <!-- <FrameLayout
         android:id="@+id/login_frame"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginTop="@dimen/dp_30" />
 -->
    <!-- <LinearLayout

         android:id="@+id/login_ll"
         android:layout_width="@dimen/dp_375"
         android:layout_marginTop="@dimen/dp_30"
         android:layout_height="wrap_content"/>-->

    <TextView
        android:layout_width="@dimen/dp_42"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_27_5"
        android:layout_marginTop="@dimen/dp_30"
        android:text="手机号"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="@dimen/dp_322"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_26_5"
        android:layout_marginTop="@dimen/dp_10_5"
        android:background="@drawable/login_phone_selector">

        <EditText
            android:id="@+id/ed_login_phone"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15_5"
            android:layout_marginTop="@dimen/dp_13_5"
            android:background="@null"
            android:hint="请输入手机号"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_ll_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_27_5"
            android:layout_marginTop="@dimen/dp_21_5"
            android:text="密码"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_48_5"
            android:layout_marginLeft="@dimen/dp_22_5"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@mipmap/login_input_box">

            <LinearLayout
                android:layout_width="@dimen/dp_322"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginTop="3dp"
                android:background="@drawable/login_phone_selector">

                <EditText
                    android:id="@+id/ed_password"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_13"
                    android:background="@null"
                    android:hint="请输入你的密码"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/login_ll_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_login_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_27_5"
            android:layout_marginTop="@dimen/dp_21_5"
            android:text="验证码"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="@dimen/dp_335"
            android:layout_height="@dimen/dp_48_5"
            android:layout_marginLeft="@dimen/dp_22_5"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@mipmap/login_input_box">

            <LinearLayout
                android:layout_width="@dimen/dp_322"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginTop="3dp"
                android:background="@drawable/login_phone_selector">

                <EditText
                    android:id="@+id/ed_login_code"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_13"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_11"
            android:layout_marginLeft="@dimen/dp_182"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/agreement_selector"
            android:src="@mipmap/agreement" />

        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="@dimen/dp_154"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5_5"
            android:layout_marginTop="@dimen/dp_24_5"
            android:text="需要勾选同意《OA系统协议》!"
            android:textColor="#ff5690f5"
            android:textSize="11sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_322"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_26_5"
        android:layout_marginTop="@dimen/dp_50">

        <ImageView
            android:id="@+id/iv_regin_login"
            android:layout_width="@dimen/dp_322"
            android:layout_height="@dimen/dp_39_5"
            android:background="@mipmap/login_box" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="@dimen/dp_45"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_26_5"
        android:layout_marginTop="@dimen/dp_17">

        <TextView
            android:id="@+id/tv_forget_the_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="#ff579ced"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_regin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_27_5"
            android:text="立即注册"
            android:textColor="#ff579ced"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

</LinearLayout>
