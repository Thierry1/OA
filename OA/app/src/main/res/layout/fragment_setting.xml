<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@mipmap/navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_64"/>

        <ImageView
            android:id="@+id/iv_message_return"
            android:layout_width="@dimen/dp_9"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_14"
            android:background="@mipmap/qr_return" />
        <TextView
            android:textSize="@dimen/sp_16"
            android:text="我的设置"
            android:textColor="#ffffffff"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:text="头像"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_setting_head"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_38"
            android:layout_width="@dimen/dp_35_5"
            android:layout_height="@dimen/dp_35_5"/>
        <ImageView
            android:id="@+id/iv_setting_head_enter"
            android:background="@mipmap/setting_enter"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_15"/>
    </RelativeLayout>
    <View
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:text="名字"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_setting_user"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="用户名"
            android:textSize="@dimen/sp_16"
            android:layout_marginRight="@dimen/dp_38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_setting_user_enter"
            android:background="@mipmap/setting_enter"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_15"/>
    </RelativeLayout>
   <View
       android:background="#E6E6E6"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_10"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:layout_centerInParent="true"
        android:textColor="#ff333333"
        android:textSize="@dimen/dp_16"
        />
    </RelativeLayout>
</LinearLayout>