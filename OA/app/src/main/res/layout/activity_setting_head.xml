<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/black"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.ui.activity.SettingHeadActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/iv_my_setting_return"
            android:background="@mipmap/qr_return"
            android:layout_width="@dimen/dp_9"
            android:layout_marginLeft="@dimen/dp_14"
           android:layout_centerVertical="true"
            android:layout_height="@dimen/dp_15"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人头像"
            android:textColor="#ffffffff"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_16"
            />
        <ImageView
            android:id="@+id/my_setting_head_san"
            android:layout_width="@dimen/dp_3_5"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/my_setting_head_san"
            android:layout_marginRight="@dimen/dp_19_5"
            android:layout_height="@dimen/dp_18_5"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_my_setting_head"
        android:background="@mipmap/my_setting_head"
         android:layout_marginTop="@dimen/dp_66"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_375"/>

</LinearLayout>