<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--我的数据-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_235" />

        <ImageView
            android:id="@+id/my_data_return"
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_33"
            android:background="@mipmap/qr_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_33_5"
            android:layout_marginRight="@dimen/dp_146"
            android:textColor="@android:color/white"
            android:text="我的数据"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_data_tv_shouru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_data_return"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_59"
            android:text="昨日收入(元）"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/my_data_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_data_tv_shouru"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_17"
            android:text="0000.00"
            android:textSize="@dimen/dp_24" />

        <TextView
            android:id="@+id/my_data_tv_ribihuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_data_tv_money"
            android:text="日环比"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_14" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+0.00%"
            android:layout_below="@id/my_data_tv_ribihuan"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_9_5"
            android:textSize="@dimen/sp_14"
            />
        <View
            android:id="@+id/my_data_view1"
            android:background="#000000"
            android:layout_width="1dp"
            android:layout_toRightOf="@id/my_data_tv_ribihuan"
            android:layout_marginLeft="@dimen/dp_71"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_below="@id/my_data_tv_money"
            android:layout_height="@dimen/dp_50"/>
        <TextView
            android:id="@+id/my_data_tv_zhoutongbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周同比"
            android:layout_below="@id/my_data_tv_money"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_toRightOf="@id/my_data_view1"
            android:layout_marginLeft="@dimen/dp_14_5"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+0.00%"
            android:layout_toRightOf="@id/my_data_view1"
            android:layout_below="@id/my_data_tv_zhoutongbi"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_9_5"
            android:textSize="@dimen/sp_14"
            />
        <View
            android:id="@+id/my_data_view2"
            android:background="#000000"
            android:layout_width="1dp"
            android:layout_toRightOf="@id/my_data_tv_zhoutongbi"
            android:layout_marginLeft="@dimen/dp_66"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_below="@id/my_data_tv_money"
            android:layout_height="@dimen/dp_50"/>
        <TextView
            android:id="@+id/my_data_tv_yueshouru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本月收入(元)"
            android:layout_below="@id/my_data_tv_money"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_toRightOf="@id/my_data_view2"
            android:layout_marginLeft="@dimen/dp_14"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000"
            android:layout_toRightOf="@id/my_data_view2"
            android:layout_below="@id/my_data_tv_yueshouru"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_9_5"
            android:textSize="@dimen/sp_14"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_83"
        android:layout_marginTop="@dimen/dp_26">

        <TextView
            android:id="@+id/my_tv_guanggao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_13_5"
            android:text="广告主"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/bt_all"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_toRightOf="@id/my_tv_guanggao"
            android:background="@drawable/my_data_bt_selector"
            android:text="所有"
            android:textColor="#5791F5" />

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@id/bt_all"
            >

            <Button
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_23"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/my_tv_guanggao"
                android:background="@drawable/my_data_bt_selector1"
                android:text="激励视频"
                android:textColor="#8B8B8B" />

            <Button
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_toRightOf="@id/my_tv_guanggao"
                android:background="@drawable/my_data_bt_selector1"
                android:text="Banner"
                android:textColor="#8B8B8B" />
            <Button
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_toRightOf="@id/my_tv_guanggao"
                android:background="@drawable/my_data_bt_selector1"
                android:text="插屏"
                android:textColor="#8B8B8B" />
            <Button
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_toRightOf="@id/my_tv_guanggao"
                android:background="@drawable/my_data_bt_selector1"
                android:text="视频广告"
                android:textColor="#5791F5" />


        </GridLayout>
        <GridLayout
            android:layout_marginTop="@dimen/dp_8"
            android:layout_below="@id/grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@id/bt_all"
            >

            <Button
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_23"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/my_tv_guanggao"
                android:background="@drawable/my_data_bt_selector1"
                android:text="视频广告"
                android:textColor="#8B8B8B" />

        </GridLayout>



    </RelativeLayout>


</LinearLayout>